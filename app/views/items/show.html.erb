<p id="notice"><%= notice %></p>



<div class="panel panel-default offset">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @item.title %></h3>
    <div align="right">
  	<% if owner_signed_in? %>
	<%= link_to 'Edit', edit_item_path(@item) %> 
	<% end %>
  </div>
  </div>
  <div class="panel-body">
    <table class="table">
    	<tr>
    		<td> Description </td>
    		<td> <%= @item.description %> </td>
    	</tr>
    	<tr>
    		<td>Image: </td>
    		<td> <%= image_tag @item.image.url(:medium) %> </td>
    	</tr>
    	<tr>
    		<td>Price:</td>
    		<td> <%= @item.price %> </td>
    	</tr>
    </table>
  </div>
  
  
</div>

