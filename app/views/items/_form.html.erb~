<% cache (cache_key_for_form(item)) do %>
<div class="row" align="center">
  
  <div class="border-form-div">
    <h2>New Item</h2><hr/>
    <%= form_for @item, html: { multipart: true} do |f| %>
    <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, rows: 3, :class => "form-control", :placeholder => "Description" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      
      <%= f.text_field :price, :class => "form-control", :placeholder => "Price" %>
    </div>
    <div class="form-group">
      
      <%= f.select :menu_id, Menu.all.collect {|x| [x.title , x.id]} , {:include_blank => "Select One..."} %>
    </div>
    
      <%= f.submit 'Create Item', :class=>'btn-custom btn' %>
    <% end %>

  </div>

</div>
<% end %>
