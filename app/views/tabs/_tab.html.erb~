<h2>Your tab</h2>
<table>
  <% tab.carts.each do |cart| %>
    <tr>
      <td><%= render :partial => cart, :locals => {:with_buttons => false } %></td>
    </tr>
  <% end %>

  <tr>
    <td colspan="2"><strong>Total</strong></td>
    <td><strong><%= number_to_currency(tab.total_bill) %></strong></td>
  </tr>
</table>


class User::OrderHistorysController < ApplicationController

  def show
		if user_signed_in?		
			@tabs = Tab.where(user_id: current_user.id)
			@checkouts = Checkout.where(tab_id: @tabs)	
		end
  end

end
<div class="offset">
	<h1>Your Order History</h1>
	<% if defined?(@tabs) %>
		<% render @tabs %>
	<% end %> 
</div>

