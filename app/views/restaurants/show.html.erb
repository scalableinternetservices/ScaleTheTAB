
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
<hr/>

<p id="notice"><%= notice %></p>

<h2>
  <%= @restaurant.name %>
</h2>

  <%= image_tag @restaurant.image_url, size: "200x150"%>


<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @restaurant.city %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @restaurant.zip_code %>
</p>

<p>
  <strong>Tell:</strong>
  <%= number_to_phone(@restaurant.tell) %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @restaurant.owner_id %>
</p>
<hr/>

<h3>Menus</h3>
<ul>
<% @menus.each do |menu|%>
<li><%= link_to menu.title , menu %>
  <ul>
  <% menu.items.each do |item|%>
  <div>
    <span>
    <li>
      <div>

        <span><%= link_to item.title , item %></span> 
        <span><%= number_to_currency(item.price)  %></span> | 
        <span> <%= link_to "Add to Tab", new_item_path %></span>
      </div>
    </li>
    
    
  <% end %> 

  <br/>

    <%= link_to "Add Item", new_item_path(menu_id: menu.id) %>

  </ul>
</li>

<br/>
<% end %>
<%= link_to "Add Menu", new_menu_path(restaurant_id: @restaurant.id) %>
</ul>

<hr/>

<h3>Tables</h3>
<ul>
<% @tables.each do |table|%>
<li><%= link_to table.name , table %>
</li>
<br/>
<% end %>
<%= link_to "Add Table", new_table_path(restaurant_id: @restaurant.id) %>
</ul>



