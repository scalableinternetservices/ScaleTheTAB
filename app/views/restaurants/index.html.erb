<div class="container">
<p id="notice"><%= notice %></p>
<br/><br/><br/>

<% if owner_signed_in? %>
<div class="row">
    <div align="right">
      <%= button_to "Add Restaurant", new_restaurant_path, :method => "get", :class => "btn btn-primary" %>
    </div>
</div>
<% end %>

<h3> Restaurants </h3>
<hr/>

<% @restaurants.each do |r| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to r.name , r %></h3>
    <!-- <h3 class="panel-title">Panel title</h3> -->
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <%=image_tag r.image.url(:medium) %>
      </div>
      <div class="col-md-6">
        <table class="table">
          <tr>
            <td><strong>Description:   </strong></td>
            <td> <%= r.description %> </td>
          </tr>
          <tr>
            <td><strong> Address: </strong></td>
            <td> <%= r.address %></td>
          </tr>
           <tr>
            <td><strong> Telephone No: </strong></td>
            <td> <%= number_to_phone(r.tell) %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>


  


