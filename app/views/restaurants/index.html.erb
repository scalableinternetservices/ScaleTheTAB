<div class="row">
	<% if owner_signed_in? %>
	<% page_header 'Your Restaurants'%>
	<div align="right">
		<%= button_to "Add Restaurant", new_restaurant_path, :method => "get", :class => " btn-custom btn", :style =>"margin-top:-120px" %>
	</div>
	<% else %>
	<% page_header 'Restaurants'%>
	<% end %>
</div>

<div class="row">
	<%= form_tag(restaurants_path, :method => "get", id: "search-form") do %>
		<%= text_field_tag :search_name, params[:search_name], placeholder: "Search by Name" %>
		<%= text_field_tag :search_city, params[:search_city], placeholder: "Search by City" %>
		<%= text_field_tag :search_zip_code, params[:search_zip_code], placeholder: "Search by Zip Code" %>
		<%= submit_tag "Search" %>
	<% end %>
</div>

<div align="center" style="margin-top: 50px">
	<%= will_paginate @restaurants %>
</div>

<% counter = 0 %>
	<div class = "row">
	<% @restaurants.each do |r| %>
  	<% if not owner_signed_in? or (owner_signed_in? and current_owner.id == r.owner_id) %>
    
    <% if counter % 3 == 0 and counter != 0 %>
    	</div>
    	<br>
    	<div class = "row">
    <% end %>	
    	
    	<div class="col-xs-6 col-md-4">
    			<p><%= link_to r.name , r, :class => "link", :style => "font-size: 150%" %></p>
    <%=image_tag r.image.url(:medium) %>
    	</div>
    <% counter = counter + 1%>
    <% end %>
	<% end %>
	</div>





  


