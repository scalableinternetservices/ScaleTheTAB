<% cache("rest_form") do %>
<div class="row offset" align="center" style="margin-top: -10px">

  <div class="border-form-div"> 
    <%= form_for @restaurant, html: { multipart: true} do |f| %>
    <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :name, :class => "form-control", :placeholder => "Restaurant Name" %>
    </div>    
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, :class => "form-control",:placeholder => "Description"  %>
    </div>
    <div class="form-group">

      <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
    </div>
    <div class="form-group">

     <%= f.text_field :city , :class => "form-control", :placeholder => "City"%>
    </div>
    <div class="form-group">

      <%= f.number_field :zip_code, :class => "form-control", :placeholder => "ZipCode" %>
    </div>
    <div class="form-group">

      <%= f.text_field :tell, :class => "form-control", :placeholder => "Telephone No" %>
    </div>


  </div>

  <br>
  <div class="row" align="center">
    <%= f.submit 'Create Restaurant', :class => 'btn-custom btn' %>
  </div>
<% end %>

</div>
<% end %>
