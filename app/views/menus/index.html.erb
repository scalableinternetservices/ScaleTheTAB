<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Menus</h1>

<table class="table">
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurant_id %></td>
        <td><%= menu.title %></td>
        <td><%= menu.description %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row" align="right">
<%= button_to 'New Menu', new_menu_path, :method => "get", :class => 'btn btn-primary' %>
</div>
</div>