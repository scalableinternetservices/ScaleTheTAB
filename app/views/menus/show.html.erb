<br><br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=@menu.restaurant_id %></h3>
  </div>
  <div class="panel-body">
    <table class="table">
    	<tr>
    		<td><strong> Title: </strong></td>
    		<td> <%= @menu.title %> </td>
    	</tr>
    	<tr>
    		<td><strong> Description: </strong></td>
    		<td> <%= @menu.description %> </td>
    	</tr>
    </table>
  </div>
</div>

<% if owner_signed_in? %>
<div class="row" align="center">
<%= button_to "Edit", edit_menu_path(@menu), :method => "get", :class => "btn btn-default" %>
</div>
<% end %>
