<!DOCTYPE html>
<html>
<body>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render(@cart) %>
      </div>
      <div id="tab">
        <%= render(@tab) %>
      </div>
    </div>
  <div id="main">
    <p id="notice"><%= notice %></p>


<div class="row" align="left" style="margin-left:20px">
<%= button_to "Back", menus_path, :method => "get", :class => "btn btn-default" %>
</div>

<br><br><br>
<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=@menu.restaurant_id %></h3>
  </div>
  <div class="panel-body">
    <table class="table">
    	<tr>
    		<td><strong> Title: </strong></td>
    		<td> <%= @menu.title %> </td>
    	</tr>
    	<tr>
    		<td><strong> Description: </strong></td>
    		<td> <%= @menu.description %> </td>
    	</tr>
    </table>
  </div>
</div>
</div>
<% if owner_signed_in? %>
<div class="row" align="center">
<%= button_to "Edit", edit_menu_path(@menu), :method => "get", :class => "btn btn-default" %>
</div>
<% end %>
