<% cache (cache_key_for_menu_form(menu)) do %>
<div class="row offset" align="center">
  <div class="border-form-div">
    <%= form_for(@menu) do |f| %>
    <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
        <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <h2>New Menu </h2>
        
          <div class="form-group">
            <td> <%= f.text_field :title,:class => "form-control", :placeholder => "Menu Title" %> </td>
          </div>
          <div class="form-group">
            
            <td> <%= f.text_area :description, :class => "form-control", :placeholder => "Menu Description" %> </td>
          </div>
          <div class="form-group">
            <td> <%= f.select :restaurant_id, Restaurant.all.collect {|x| [x.name , x.id]} , {:include_blank => "Select Restaurant..."} %></td>
          </div>

     

    <div class="actions" align="center">
      <%= f.submit 'Create Menu', :class => 'btn-custom btn' %>
    </div>
  </div>
  <% end %>


</div>
</div>
<% end %>
