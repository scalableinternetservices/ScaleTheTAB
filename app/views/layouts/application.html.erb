<!DOCTYPE html>
<html>
<head>
  <title>ScaleTheTab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav id = "navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div id ="nav" class="container-fluid">
            
            <div class="navbar-header">
                <%= link_to '/ SCALETheTAB \\', root_path, id: 'brand', class: 'navbar-brand' %>
            </div>
            <ul class="list-group pull-right">
                <!-- User Sign In -->
                <% if user_signed_in? %>

                <li id = "signedinname" style="margin-top:10px">Welcome, <%= current_user.email %></li>
                <li class="text"><%= link_to "Order History", user_order_historys_show_path, :style => "color:#FFFFFF;" %></li>
		            <li class="text"> <%= link_to "Logout", destroy_user_session_path, method: :delete, :style => "color:#FFFFFF;" %></li>

                <!-- Owner Sign In -->
                <% elsif owner_signed_in? %>
                
                <li id = "signedinname" style="margin-top:10px">Welcome, <%= current_owner.email %><br>
                 <li class="text"> <%= link_to 'Your Orders', conversations_path, :class => "link", :style => "color:#FFFFFF;"%></li>
                <li class="text"><%= link_to "Logout", destroy_owner_session_path, method: :delete, :class => "link", :style => "color:#FFFFFF;"%></li>
                
                
                <% else %>

                <ul id="SignIn" class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" style="color:#FFFFFF;" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sign In <span class="caret" style="color:#FFFFFF;"></span></a>
                      <ul class="dropdown-menu">
                        <li><%= link_to 'Customer', new_user_session_path %></li>
                        <li role="separator" class="divider"></li>
                        <li><%= link_to 'Restaurant Owner', new_owner_session_path %></li>
                    </ul>
                </li>
            </ul>
                  
            

            <% end %>
        </ul>
    </div>
</nav>

<div class="container">

    

  <div class="page-header">
    <h1 class="offset"><%= yield :page_header %></h1>
</div>




<%= yield %>
</div>


</body>
</html>
