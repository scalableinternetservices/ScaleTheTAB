<!DOCTYPE html>
<html>
<head>
  <title>ScaleTheTab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav id = "navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <%= link_to '/ SCALETheTAB \\', root_path, id: 'brand', class: 'navbar-brand' %>
            </div>
            <ul class="nav navbar-nav pull-right">
                <% if user_signed_in? %>
                <p id = "signedinname" class="navbar-text navbar-right" style="margin-top:20px">Signed in as <%= current_user.email %><br>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %></p>

                <% elsif owner_signed_in? %>
                <div class="row" align="right" style="margin-right: 15px">
                  <%= link_to 'Your Orders', conversations_path, :class => "link", :style => "font-size: 150%" %>
                </div>
                
                <p id = "signedinname" class="navbar-text navbar-right" style="margin-top:20px">Signed in as <%= current_owner.email %><br>
                
                <%= link_to "Logout", destroy_owner_session_path, method: :delete, :class => "link"%>
                
                
                <% else %>

                <ul id="SignIn" class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sign In <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><%= link_to 'Customer', new_user_session_path %></li>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to 'Restaurant Owner', new_owner_session_path %></li>
                    </ul>
                </li>
            </ul>
                  
            

            <% end %>
        </ul>
    </div>
</nav>

<div class="container">

    

  <div class="page-header">
    <h1 class="offset"><%= yield :page_header %></h1>
</div>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
  </div>
  <% end %>


<%= yield %>
</div>


</body>
</html>
