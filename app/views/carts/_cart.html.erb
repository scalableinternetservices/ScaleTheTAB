<h2>Round <%= cart.round_number %></h2>
 <table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<% defined?(with_buttons) or with_buttons = true %>
<% if (with_buttons) %>
  <%= button_to "Confirm Order", { :controller => "carts", :action => "add_to_order", :id => cart.id } %>
  <%= button_to "Clear Items", @cart, method: :delete, data: {confirm: 'Clear all items?', remote: true } %>
<% end %>
